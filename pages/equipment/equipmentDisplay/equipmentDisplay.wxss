  text-align: center;
  border: 1px solid chocolate;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
}
#reward image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
} 
#reward text{
  font-size: 50rpx;
}
