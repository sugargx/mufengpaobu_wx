
page{
  background-color: #FFFFFF;
}
image{
  margin: 4px auto;
}


.detail-post-comment{
  overflow: hidden;
  border-top: 20rpx solid #eee;
}

.detail-post-comment-item{
  display: flex;
}
.detail-post-comment-title{
  position: relative;
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  border-bottom: 1px #eee solid;
}

.detail-post-comment-avatar-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.detail-post-comment-cell{
  overflow: hidden;
  flex: 1;
  margin-left: 20rpx;
}
.detail-post-comment {
  background-color: #fff;
}
.detail-post-comment-item {
  padding: 30rpx 0;
  margin: 0 30rpx;
  background: #fff;
  border-bottom: 1px #eee solid;
}

.detail-post-comment-info{
  display: flex;
}
.detail-post-comment-info-cell{
  width: 700rpx;
}
.detail-post-zan{
  width: 33rpx;
  height: 33rpx;
  display: inline-block;
}
.detail-post-zan-num{
  display: inline-block;
  margin-left: 10rpx;
  color: #888;
}
.detail-post-comment-author-name{
  font-size: 20rpx;
}
.detail-post-comment-time{
  width: 400rpx;
  font-size: 23rpx;
  color: #666;
}

.detail-comment-content{
}
.detail-comment-text {
  overflow: hidden;
  display: block;
  margin: 20rpx 0;
  font-size: 28rpx;
  word-wrap: break-word;
}


.detail-post-comment-null{
  margin: 50rpx auto;
  text-align: center;
}
.detail-post-comment-null .imgnull{
  margin: 5rpx auto;
  width: 200rpx;
  height: 200rpx;
}
.detail-post-comment-null .textnull{
  display: block;
  color: #80bd01;
}
#reward{
  line-height: 80rpx;
  width: 40%;
  height: 80rpx;
